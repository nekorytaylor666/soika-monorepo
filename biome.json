{
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "correctness": {
        "noUnusedVariables": "warn"
      }
    },
    "ignore": [
      "node_modules",
      ".next",
      "dist",
      ".wrangler",
      ".react-email",
      ".contentlayer",
      "meta"
    ]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "enabled": true,
    "lineWidth": 80,
    "ignore": [
      "node_modules",
      ".next",
      "dist",
      ".nuxt",
      ".wrangler",
      ".react-email",
      ".contentlayer",
      "meta"
    ]
  },
  "organizeImports": {
    "enabled": true,
    "ignore": [
      "node_modules",
      ".next",
      "dist",
      ".nuxt",
      ".wrangler",
      ".react-email",
      ".contentlayer"
    ]
  }
}
